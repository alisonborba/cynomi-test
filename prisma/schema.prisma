generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  gender    String
  sleeps    Sleep[]
  createdAt DateTime @default(now())
}

model Sleep {
  id       String   @id @default(cuid())
  userId   String
  duration Int
  date     DateTime
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
